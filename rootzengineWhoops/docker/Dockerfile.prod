# RootzEngine Production Container
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    pkg-config \
    libasound2-dev \
    libsndfile1-dev \
    libfftw3-dev \
    libsamplerate0-dev \
    libjack-jackd2-dev \
    portaudio19-dev \
    ffmpeg \
    libavcodec-extra \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN groupadd -r rootzengine && useradd -r -g rootzengine rootzengine

# Set working directory
WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY src/ /app/src/
COPY configs/ /app/configs/

# Install package
RUN pip install .

# Create data directories
RUN mkdir -p /app/data /app/logs && \
    chown -R rootzengine:rootzengine /app

# Switch to non-root user
USER rootzengine

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run application
CMD ["uvicorn", "rootzengine.api.main:app", "--host", "0.0.0.0", "--port", "8000"]